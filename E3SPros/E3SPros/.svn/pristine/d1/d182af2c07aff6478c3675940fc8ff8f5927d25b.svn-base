    -webkit-box-shadow: rgba(77, 62, 62, 0.5) -17px 18px 32px 22px;
    box-shadow: rgba(77, 62, 62, 0.5) -17px 18px 32px 22px;
    background-color: white;
    padding: 8px 27px;
    // padding: 10px 30px;
    .button{
        float: right;
        margin-right: 16px;
    }
}
