         color: #2971ff;
         border: #2971ff;
         border-radius: 2px;
         input {
             border-radius: 2px;
         }
     }
     .el-select {
         width: 68%;
     }
     .el-select {
         .el-input {
             width: 100%;
         }
     }
     .el-form-item{
         margin-bottom: 0px
     }
 }
