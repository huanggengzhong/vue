//查询条件样式
.filter-params-crm-scroll{
    background-color: #FFF;
    width: 100%;
    height:calc(100vh - 74px);
    overflow-y: scroll;
    margin-top: -10px;
    border-bottom: 1px solid #ddd;
    margin-top: 5px;
    margin-left: 10px;
    .cssvalidateFormate{
        display: inline-table
    }
}
.crm-s-scroll{
    padding-bottom:60px; 
    // margin-top: 45px;
    margin-left: 10px;  
}
.crm-label-required .el-form-item .el-form-item__label::before {
    content: '*';
    color: #F56C6C;
    margin-right: 4px;
}
.crm-default-select-area{
    span{
        display: block
    }
    cursor: pointer;
    display: inline-block;
    min-width: 60px;
    height: 28px;
    line-height: 28px;
    border: 1px solid #ddd;
    border-radius: 2px;
    font-size: 12px;
    text-align: center;
}
.crm-selectedClass{
    background: #2971ff;
    color:white;
}
.crm-unselectedClass{
   
}
el-dialog{
    .filter-params-crm {
        width: 100%;
        text-align: right;
        padding: 10px 0px 10px 0px;
        border: none;
        border-radius: 0px;
        .toggleParam{
           z-index: 999999;
           // position: relative;
           // margin: 0;
           // top:0;
           box-shadow: rgba(0, 0, 0, 0.5) 10px 20px 20px 0px;
