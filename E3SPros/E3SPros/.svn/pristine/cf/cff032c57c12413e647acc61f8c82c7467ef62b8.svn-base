// 重可复用样式

@mixin clearfix {
  &:after {
    content: "";
    display: table;
    clear: both;
  }
}

@mixin scrollBar {
  &::-webkit-scrollbar-track-piece {
    background: #d3dce6;
  }

  &::-webkit-scrollbar {
    width: 6px;
  }

  &::-webkit-scrollbar-thumb {
    background: #99a9bf;
    border-radius: 20px;
  }
}

@mixin relative {
  position: relative;
  width: 100%;
  height: 100%;
}

@mixin paginationwidth {
  width: 40px;
  height: 30px;
  background: $whilt;
  border-radius: 0px;
  margin: 0px;
  border: 1px solid $button-bgColor;
  border-right: none;
}

@mixin elButton {
  height: 29px;
  line-height: 29px;
  border-radius: 4px;
  font-size: 12px;
  min-width: 68px;
  padding-top: 0px;
  padding-bottom: 0px;
}

@mixin elScoll {
  /*隐藏滚动条，当IE下溢出，仍然可以滚动*/
  -ms-overflow-style: -ms-autohiding-scrollbar;
  scrollbar-arrow-color: $whilt;
  scrollbar-face-color: rgb(224, 224, 224);
  scrollbar-3dlight-color: $whilt;
  scrollbar-highlight-color: $whilt;
  scrollbar-shadow-color: $whilt;
  scrollbar-darkshadow-color: $whilt;
  scrollbar-track-color: $whilt;
  scrollbar-base-color: $whilt;

  //debkit浏览器
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
    border-radius: 10px;
    background-color: transparent;
  }

  :hover::-webkit-scrollbar {
    width: 8px;
    height: 8px;
    background-color: rgba(216, 209, 209, 0.205);
  }

  /*定义滚动条轨道 内阴影+圆角*/

  ::-webkit-scrollbar-track {
    border-radius: 10px;
  }

  :hover::-webkit-scrollbar-track {
    border-radius: 10px;
    background-color: transparent;
  }

  /*定义滑块 内阴影+圆角*/

  ::-webkit-scrollbar-thumb {
    background-color: transparent;
  }

  :hover::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: $darkGray;
  }
}